/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Source Code Pro', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    margin: 0;
    padding: 0;
    background: #1a1a2e;
    color: #a8e6a3;
    line-height: 1.6;
    overflow-x: hidden;
    text-shadow: 0 0 2px rgba(168, 230, 163, 0.2);
}

.container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Navigation */
.navbar {
    background: #16213e;
    border-bottom: 2px solid #7dd3fc;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 2px 10px rgba(125, 211, 252, 0.2);
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
}

.nav-logo h2 {
    color: #93c5fd;
    font-weight: 600;
    font-size: 1.4rem;
    text-shadow: 0 0 5px rgba(147, 197, 253, 0.5);
}

.nav-logo h2::before {
    content: "$ ";
    color: #7dd3fc;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-link {
    color: #a8e6a3;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid transparent;
    transition: all 0.3s ease;
    position: relative;
}

.nav-link::before {
    content: "> ";
    opacity: 0;
    transition: opacity 0.3s ease;
}

.nav-link:hover,
.nav-link.active {
    color: #93c5fd;
    border: 1px solid #7dd3fc;
    box-shadow: 0 0 8px rgba(125, 211, 252, 0.3);
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.5);
}

.nav-link:hover::before,
.nav-link.current::before {
    opacity: 1;
}

.nav-link.current {
    color: #93c5fd;
    border: 1px solid #7dd3fc;
    box-shadow: 0 0 10px rgba(125, 211, 252, 0.4);
    font-weight: 600;
    text-shadow: 0 0 4px rgba(147, 197, 253, 0.5);
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: #a8e6a3;
    margin: 3px 0;
    transition: 0.3s;
    box-shadow: 0 0 2px rgba(168, 230, 163, 0.5);
}

/* Main Content */
.main-content {
    margin-top: 70px;
}

.section {
    min-height: 100vh;
    padding: 4rem 0;
    scroll-margin-top: 70px;
}

.section:first-child {
    padding-top: 2rem;
}

.section-title {
    font-size: 2.2rem;
    text-align: center;
    margin-bottom: 3rem;
    color: #93c5fd;
    font-weight: 400;
    position: relative;
    text-shadow: 0 0 5px rgba(147, 197, 253, 0.3);
    font-family: 'Source Code Pro', monospace;
}

.section-title::before {
    content: "# ";
    color: #7dd3fc;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background: #7dd3fc;
    box-shadow: 0 0 5px #7dd3fc30;
}

/* Home Section */
.home-hero {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 3rem;
    align-items: center;
    min-height: calc(100vh - 150px);
    padding: 2rem 0;
}

.hero-text h1 {
    font-size: 2.8rem;
    font-weight: 400;
    color: #93c5fd;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 8px rgba(147, 197, 253, 0.3);
    font-family: 'Source Code Pro', 'Courier New', monospace;
}

.hero-text h1::after {
    content: '|';
    animation: blink 1s infinite;
    color: #7dd3fc;
}

@keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
}

.subtitle {
    font-size: 1.3rem;
    color: #a8e6a3;
    margin-bottom: 1.5rem;
    font-weight: 400;
    text-shadow: 0 0 4px #a8e6a330;
}

.hero-description {
    font-size: 1.1rem;
    color: #cbd5e1;
    margin-bottom: 2rem;
    line-height: 1.7;
    max-width: 600px;
}

.hero-photo {
    width: 300px;
    height: 300px;
    border-radius: 8px;
    object-fit: cover;
    border: 2px solid #7dd3fc;
    box-shadow: 0 0 15px rgba(125, 211, 252, 0.3);
}

.hero-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
}

.highlight-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem;
    background: #0f172a;
    border: 1px solid #475569;
    border-radius: 4px;
    transition: all 0.3s ease;
    box-shadow: 0 0 8px rgba(71, 85, 105, 0.2);
}

.highlight-item:hover {
    border-color: #7dd3fc;
    box-shadow: 0 0 12px rgba(125, 211, 252, 0.3);
    transform: translateY(-2px);
}

.highlight-item i {
    font-size: 1.2rem;
    color: #7dd3fc;
    text-shadow: 0 0 3px #7dd3fc30;
}

.social-links {
    display: flex;
    gap: 0.8rem;
    margin-top: 2rem;
}

.social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #0f172a;
    color: #a8e6a3;
    border: 1px solid #475569;
    border-radius: 4px;
    text-decoration: none;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 0 6px rgba(168, 230, 163, 0.2);
}

.social-link:hover {
    background: #1e293b;
    border-color: #7dd3fc;
    box-shadow: 0 0 12px rgba(125, 211, 252, 0.4);
    transform: scale(1.1);
}

/* Projects Section */
.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
}

.project-card {
    background: #0f172a;
    padding: 1.5rem;
    border: 1px solid #475569;
    border-radius: 4px;
    transition: all 0.3s ease;
    box-shadow: 0 0 8px rgba(71, 85, 105, 0.2);
}

.project-card:hover {
    border-color: #7dd3fc;
    box-shadow: 0 0 15px rgba(125, 211, 252, 0.3);
    transform: translateY(-5px);
}

.project-header {
    margin-bottom: 1rem;
}

.project-header h3 {
    color: #93c5fd;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 1rem;
}

.tech-tag {
    background: #1e293b;
    color: #a8e6a3;
    padding: 0.2rem 0.6rem;
    border: 1px solid #334155;
    border-radius: 3px;
    font-size: 0.8rem;
    font-weight: 400;
    font-family: 'Source Code Pro', monospace;
}

.project-achievement {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.6rem;
    background: #1e293b;
    border-radius: 3px;
    border-left: 3px solid #fbbf24;
    border: 1px solid #475569;
}

.project-achievement i {
    color: #fbbf24;
    text-shadow: 0 0 3px #fbbf2430;
}

.project-features ul {
    margin-top: 1rem;
    padding-left: 1.5rem;
}

.project-features li {
    margin-bottom: 0.5rem;
    color: #666;
}

/* Experience Section */
.experience-timeline {
    position: relative;
    margin-bottom: 3rem;
}

.experience-timeline::before {
    content: '';
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #7dd3fc;
    box-shadow: 0 0 5px #7dd3fc30;
}

.experience-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 80px;
}

.experience-item::before {
    content: '';
    position: absolute;
    left: 24px;
    top: 0;
    width: 14px;
    height: 14px;
    background: #7dd3fc;
    border-radius: 50%;
    border: 3px solid #1a1a2e;
    box-shadow: 0 0 0 2px #7dd3fc, 0 0 5px #7dd3fc30;
}

.experience-date {
    color: #93c5fd;
    font-weight: 500;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    font-family: 'Source Code Pro', monospace;
}

.experience-content h3 {
    color: #93c5fd;
    font-size: 1.3rem;
    margin-bottom: 0.3rem;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.experience-content h4 {
    color: #a8e6a3;
    font-weight: 500;
    margin-bottom: 1rem;
}

.experience-content ul {
    padding-left: 1.5rem;
}

.experience-content li {
    margin-bottom: 0.5rem;
    color: #cbd5e1;
}

/* Education Section */
.education-content {
    max-width: 800px;
    margin: 0 auto;
}

.education-item {
    background: #0f172a;
    padding: 2rem;
    border: 1px solid #475569;
    border-radius: 4px;
    text-align: center;
    box-shadow: 0 0 15px rgba(71, 85, 105, 0.2);
}

.education-item h3 {
    color: #93c5fd;
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
    text-shadow: 0 0 5px rgba(147, 197, 253, 0.3);
}

.education-item h4 {
    color: #a8e6a3;
    font-size: 1.2rem;
    margin-bottom: 1rem;
    font-weight: 400;
}

.education-degree {
    color: #93c5fd;
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.education-date {
    color: #666;
    font-style: italic;
    margin-bottom: 2rem;
}

.education-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    text-align: left;
    margin-top: 2rem;
}

.coursework h4,
.activities h4 {
    color: #93c5fd;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 500;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.coursework p {
    color: #cbd5e1;
    line-height: 1.6;
}

.activities ul {
    list-style: none;
    padding: 0;
}

.activities li {
    color: #cbd5e1;
    margin-bottom: 0.8rem;
    padding-left: 1rem;
    position: relative;
}

.activities li::before {
    content: '> ';
    color: #7dd3fc;
    position: absolute;
    left: 0;
    text-shadow: 0 0 3px #7dd3fc30;
}

.activities strong {
    color: #93c5fd;
    text-shadow: 0 0 2px rgba(147, 197, 253, 0.3);
}

/* Skills Section */
.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.skills-category {
    background: #0f172a;
    padding: 1.5rem;
    border: 1px solid #475569;
    border-radius: 4px;
    box-shadow: 0 0 8px rgba(71, 85, 105, 0.2);
}

.skills-category h3 {
    color: #93c5fd;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    font-weight: 500;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.skills-category i {
    color: #7dd3fc;
    text-shadow: 0 0 3px #7dd3fc30;
}

.skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.skill-item {
    background: #1e293b;
    color: #a8e6a3;
    padding: 0.4rem 0.8rem;
    border: 1px solid #334155;
    border-radius: 3px;
    font-size: 0.9rem;
    font-weight: 400;
    transition: all 0.3s ease;
    font-family: 'Source Code Pro', monospace;
}

.skill-item:hover {
    border-color: #7dd3fc;
    box-shadow: 0 0 8px rgba(125, 211, 252, 0.3);
    transform: scale(1.05);
}

.recognition-section {
    margin-bottom: 3rem;
}

.recognition-section h3 {
    color: #2c3e50;
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
}

.awards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
}

.award-item {
    display: flex;
    gap: 1rem;
    padding: 1.2rem;
    background: #0f172a;
    border: 1px solid #475569;
    border-radius: 4px;
    transition: all 0.3s ease;
    box-shadow: 0 0 8px rgba(71, 85, 105, 0.2);
}

.award-item:hover {
    border-color: #7dd3fc;
    box-shadow: 0 0 15px rgba(125, 211, 252, 0.3);
    transform: translateY(-3px);
}

.award-icon {
    flex-shrink: 0;
}

.award-icon i {
    font-size: 2rem;
    color: #fbbf24;
    text-shadow: 0 0 5px #fbbf2430;
}

.award-content h4 {
    color: #93c5fd;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.award-prize {
    color: #a8e6a3;
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.award-date {
    color: #666;
    font-style: italic;
    margin-bottom: 0.5rem;
}

.certifications-section {
    background: #16213e;
    padding: 1.5rem;
    border: 1px solid #7dd3fc;
    border-radius: 4px;
    box-shadow: 0 0 10px rgba(125, 211, 252, 0.2);
}

.certifications-section h3 {
    color: #93c5fd;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 3px rgba(147, 197, 253, 0.3);
}

.cert-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.cert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem;
    background: #111827;
    border-radius: 3px;
    border-left: 3px solid #7dd3fc;
    border: 1px solid #93c5fd;
}

.cert-item i {
    color: #7dd3fc;
    font-size: 1.1rem;
    text-shadow: 0 0 2px #7dd3fc30;
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
    .hamburger {
        display: flex;
    }
    
    .nav-menu {
        position: fixed;
        left: -100%;
        top: 70px;
        flex-direction: column;
        background: #000000;
        width: 100%;
        text-align: center;
        transition: 0.3s;
        padding: 2rem 0;
        gap: 0;
        border-top: 2px solid #7dd3fc;
        box-shadow: 0 2px 20px rgba(125, 211, 252, 0.3);
    }
    
    .nav-menu.active {
        left: 0;
    }
    
    .nav-item {
        margin: 1rem 0;
    }
    
    .home-hero {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }
    
    .hero-photo {
        width: 250px;
        height: 250px;
        margin: 0 auto;
    }
    
    .hero-text h1 {
        font-size: 2.5rem;
    }
    
    .subtitle {
        font-size: 1.2rem;
    }
    
    .hero-description {
        font-size: 1rem;
    }
    
    .hero-highlights {
        grid-template-columns: 1fr;
    }
    
    .projects-grid {
        grid-template-columns: 1fr;
    }
    
    .skills-grid {
        grid-template-columns: 1fr;
    }
    
    .awards-grid {
        grid-template-columns: 1fr;
    }
    
    .education-details {
        grid-template-columns: 1fr;
    }
    
    .education-item {
        padding: 1.5rem;
    }
    
    .experience-timeline::before {
        left: 20px;
    }
    
    .experience-item {
        padding-left: 60px;
    }
    
    .experience-item::before {
        left: 14px;
    }
}

@media screen and (max-width: 480px) {
    .nav-logo h2 {
        font-size: 1.2rem;
    }
    
    .hero-text h1 {
        font-size: 2rem;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .container {
        padding: 0 15px;
    }
    
    .nav-container {
        padding: 0 15px;
    }
}